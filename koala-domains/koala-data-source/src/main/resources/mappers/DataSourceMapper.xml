<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.data.mybatis.DataSourceRepository">

  <sql id="selectDataSource">
    select t.id,
           t.name,
           t.url,
           t.username,
           t.password,
           t.is_system,
           t.is_delete
    from t_data_source t
  </sql>

  <select id="findAll" resultType="cn.koala.data.DataSourceEntity">
    <include refid="selectDataSource"/>
    <where>
      t.is_delete = ${@cn.koala.enhancement.YesNo@NO.value}
      <if test="parameters.name != null and parameters.name != ''">
        and t.name like concat(#{parameters.name}, '%')
      </if>
    </where>
  </select>

  <select id="findById" resultType="cn.koala.data.DataSourceEntity">
    <include refid="selectDataSource"/>
    where t.is_delete = ${@cn.koala.enhancement.YesNo@NO.value} and t.id = #{id}
  </select>

  <insert id="add" parameterType="cn.koala.data.DataSourceEntity">
    insert into t_data_source(id, name, url, username, password)
    values (#{id}, #{name}, #{url}, #{username}, #{password})
  </insert>

  <update id="update" parameterType="cn.koala.data.DataSourceEntity">
    update t_data_source
    <trim prefix="set" suffixOverrides=",">
      <if test="name != null">name=#{name},</if>
      <if test="url != null">url=#{url},</if>
      <if test="username != null">username=#{username},</if>
      <if test="password != null">password=#{password},</if>
    </trim>
    where is_delete = ${@cn.koala.enhancement.YesNo@NO.value} and id=#{id}
  </update>

  <update id="delete" parameterType="cn.koala.data.DataSourceEntity">
    update t_data_source
    set is_delete = ${@cn.koala.enhancement.YesNo@YES.value}
    where id = #{id}
  </update>
</mapper>
