<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.log.repositories.LogRepository">

  <sql id="selectLog">
    select t.id,
           t.module,
           t.content,
           t.user_id,
           t.user_ip,
           t.is_succeeded,
           t.request,
           t.response,
           t.error,
           t.cost,
           t.log_time
    from sys_log t
  </sql>

  <select id="find" resultType="cn.koala.log.LogEntity">
    <include refid="selectLog"/>
    <where>
      <if test="module != null and module != ''">
        t.module like concat(#{module}, '%')
      </if>
      <if test="isSucceeded != null and isSucceeded != ''">
        and t.is_succeeded = #{isSucceeded}
      </if>
      <if test="logTimeStart != null and logTimeStart != ''">
        and t.log_time &gt; #{logTimeStart}
      </if>
      <if test="logTimeEnd != null and logTimeEnd != ''">
        and t.log_time &lt; #{logTimeEnd}
      </if>
    </where>
  </select>

  <select id="findById" resultType="cn.koala.log.LogEntity">
    <include refid="selectLog"/>
    where t.id = #{id}
  </select>

  <insert id="add" parameterType="cn.koala.log.LogEntity" useGeneratedKeys="true" keyProperty="id">
    insert into sys_log(module, content, user_id, user_ip, is_succeeded, request, response, error, cost, log_time)
    values (#{module}, #{content}, #{userId}, #{userIp}, #{isSucceeded}, #{request}, #{response}, #{error}, #{cost},
            #{logTime})
  </insert>

  <update id="update" parameterType="cn.koala.log.LogEntity">

  </update>

  <update id="delete" parameterType="cn.koala.log.LogEntity">

  </update>
</mapper>
