<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.template.repositories.TemplateGroupRepository">

  <sql id="selectTemplateGroup">
    select t.id,
           t.name,
           t.remark,
           t.is_enable,
           t.is_system,
           t.is_delete
    from t_template_group t
  </sql>

  <insert id="insert" parameterType="cn.koala.template.entities.TemplateGroupEntity">
    insert into t_template_group(id, name, remark)
    values (#{id}, #{name}, #{remark})
  </insert>

  <update id="deleteById" parameterType="cn.koala.template.entities.TemplateGroupEntity">
    update t_template_group
    set is_delete = ${@cn.koala.mybatis.YesNo@YES.value}
    where id = #{id}
  </update>

  <update id="updateById" parameterType="cn.koala.template.entities.TemplateGroupEntity">
    update t_template_group
    <trim prefix="set" suffixOverrides=",">
      <if test="name != null">name=#{name},</if>
      <if test="remark != null">remark=#{remark},</if>
    </trim>
    where is_delete = ${@cn.koala.mybatis.YesNo@NO.value} and id=#{id}
  </update>

  <select id="findById" resultType="cn.koala.template.entities.TemplateGroupEntity">
    <include refid="selectTemplateGroup"/>
    where t.is_delete = ${@cn.koala.mybatis.YesNo@NO.value} and t.id = #{id}
  </select>

  <select id="findAll" resultType="cn.koala.template.entities.TemplateGroupEntity">
    <include refid="selectTemplateGroup"/>
    <where>
      t.is_delete = ${@cn.koala.mybatis.YesNo@NO.value}
      <if test="parameters.name != null and parameters.name != ''">
        and t.name like concat(#{parameters.name}, '%')
      </if>
    </where>
  </select>
</mapper>
