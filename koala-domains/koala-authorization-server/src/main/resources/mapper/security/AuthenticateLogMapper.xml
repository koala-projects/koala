<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.security.log.repository.AuthenticateLogRepository">

  <sql id="select">
    select t.id,
           t.remote_address,
           t.session_id,
           t.authentication,
           t.successful,
           t.exception_message,
           t.log_time
    from k_authenticate_log t
  </sql>

  <sql id="where">
    <where>
      <if test="remoteAddress != null and remoteAddress != ''">
        and t.remote_address = #{remoteAddress}
      </if>
      <if test="sessionId != null and sessionId != ''">
        and t.session_id = #{sessionId}
      </if>
      <if test="successful != null and successful != ''">
        and t.successful = #{successful}
      </if>
      <if test="logTimeStart != null and logTimeStart != ''">
        and t.log_time &gt;= #{logTimeStart}
      </if>
      <if test="logTimeEnd != null and logTimeEnd != ''">
        and t.log_time &lt;= #{logTimeEnd}
      </if>
    </where>
  </sql>

  <sql id="orders">
    <choose>
      <when test="orders != null and orders.size() > 0">
        <foreach collection="orders" item="order" index="index" open=" order by " close="" separator=",">
          <include refid="order"/>
        </foreach>
      </when>
      <otherwise>
        order by t.log_time desc
      </otherwise>
    </choose>
  </sql>

  <sql id="order">
    <if test="order.property == 'logTime'">
      t.log_time
      <include refid="cn.koala.mybatis.common.CommonRepository.orderDirection"/>
    </if>
  </sql>

  <select id="list" resultType="cn.koala.security.log.AuthenticateLog">
    <include refid="select"/>
    <include refid="where"/>
    <include refid="orders"/>
  </select>

  <select id="load" resultType="cn.koala.security.log.AuthenticateLog">
    <include refid="select"/>
    where t.id = #{id}
  </select>

  <insert id="create" parameterType="cn.koala.security.log.AuthenticateLog" useGeneratedKeys="true"
          keyProperty="id">
    insert into k_authenticate_log(id, remote_address, session_id, authentication, successful, exception_message,
                                   log_time)
    values (#{id}, #{remoteAddress}, #{sessionId}, #{authentication}, #{successful}, #{exceptionMessage}, #{logTime})
  </insert>

  <update id="update" parameterType="cn.koala.security.log.AuthenticateLog">
    update k_authenticate_log
    <trim prefix="set" suffixOverrides=",">
      <if test="remoteAddress != null">remote_address=#{remoteAddress},</if>
      <if test="sessionId != null">session_id=#{sessionId},</if>
      <if test="authentication != null">authentication=#{authentication},</if>
      <if test="successful != null">successful=#{successful},</if>
      <if test="exceptionMessage != null">exception_message=#{exceptionMessage},</if>
      <if test="logTime != null">log_time=#{logTime},</if>
    </trim>
    where id=#{id}
  </update>

  <update id="delete" parameterType="cn.koala.security.log.AuthenticateLog">
    delete
    from k_authenticate_log
    where id = #{id}
  </update>
</mapper>
