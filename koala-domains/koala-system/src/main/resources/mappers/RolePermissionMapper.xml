<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="cn.koala.system.mybatis.RolePermissionRepository">

  <select id="findAllPermissionIdByRoleId" resultType="java.lang.String">
    select permission_id
    from t_role_permission
    where role_id = #{roleId}
  </select>

  <insert id="add">
    insert into t_role_permission values
    <foreach item="permissionId" index="index" collection="permissionIds" separator=",">
      (#{roleId}, #{permissionId})
    </foreach>
  </insert>

  <delete id="deleteByRoleId">
    delete
    from t_role_permission
    where role_id = #{roleId}
  </delete>
</mapper>
