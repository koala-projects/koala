<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.system.repositories.PermissionRepository">

  <sql id="selectPermission">
    select t.id,
           t.code,
           t.name,
           t.remark,
           t.parent_id,
           t.sort_index
    from k_permission t
  </sql>

  <select id="list" resultType="cn.koala.system.support.PermissionEntity">
    <include refid="selectPermission"/>
    <where>
      <if test="code != null and code != ''">
        and t.code = #{code}
      </if>
      <if test="name != null and name != ''">
        and t.name = #{name}
      </if>
    </where>
  </select>

  <select id="load" resultType="cn.koala.system.support.PermissionEntity">
    <include refid="selectPermission"/>
    where t.id = #{id}
  </select>

  <insert id="create" parameterType="cn.koala.system.support.PermissionEntity" useGeneratedKeys="true"
          keyProperty="id">
    insert into k_permission(id, code, name, remark, parent_id, sort_index)
    values (#{id}, #{code}, #{name}, #{remark}, #{parentId}, #{sortIndex})
  </insert>

  <update id="update" parameterType="cn.koala.system.support.PermissionEntity">
    update k_permission
    <trim prefix="set" suffixOverrides=",">
      <if test="code != null">code=#{code},</if>
      <if test="name != null">name=#{name},</if>
      <if test="remark != null">remark=#{remark},</if>
      <if test="parentId != null">parent_id=#{parentId},</if>
      <if test="sortIndex != null">sort_index=#{sortIndex},</if>
    </trim>
    where id=#{id}
  </update>

  <update id="delete" parameterType="cn.koala.system.support.PermissionEntity">
    delete
    from k_permission
    where id = #{id}
  </update>
</mapper>
