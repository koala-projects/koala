<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.system.mybatis.DepartmentRepository">

  <sql id="selectDepartment">
    select t.id,
           t.code,
           t.name,
           t.description
    from t_department t
  </sql>

  <select id="findAll" resultType="cn.koala.system.DepartmentEntity">
    <include refid="selectDepartment"/>
    <where>
      <if test="parameters.code != null and parameters.code != ''">
        t.code = #{parameters.code}
      </if>
      <if test="parameters.name != null and parameters.name != ''">
        and t.name = #{parameters.name}
      </if>
      <if test="parameters.parentId != null and parameters.parentId != ''">
        and t.parent_id = #{parameters.parentId}
      </if>
    </where>
  </select>

  <select id="findById" resultType="cn.koala.system.DepartmentEntity">
    <include refid="selectDepartment"/>
    where t.id = #{id}
  </select>

  <insert id="add" parameterType="cn.koala.system.DepartmentEntity">
    insert into t_department
    values (#{id}, #{code}, #{name}, #{description}, #{parent.id})
  </insert>

  <update id="update" parameterType="cn.koala.system.DepartmentEntity">
    update t_department
    set code        = #{code},
        name        = #{name},
        description = #{description},
        parent_id   = #{parent.id}
    where id = #{id}
  </update>

  <update id="delete" parameterType="cn.koala.system.DepartmentEntity">
    delete
    from t_department
    where id = #{id}
  </update>
</mapper>
