<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.koala.system.mybatis.RoleRepository">

  <sql id="selectRole">
    select t.id,
           t.code,
           t.name,
           t.description
    from t_role t
  </sql>

  <select id="findAll" resultType="cn.koala.system.RoleEntity">
    <include refid="selectRole"/>
    <where>
      <if test="parameters.code != null and parameters.code != ''">
        t.code like concat(#{parameters.code}, '%')
      </if>
      <if test="parameters.name != null and parameters.name != ''">
        and t.name like concat(#{parameters.name}, '%')
      </if>
    </where>
  </select>

  <select id="findById" resultType="cn.koala.system.RoleEntity">
    select t.id,
           t.code,
           t.name,
           t.description
    from t_role t
    where t.id = #{id}
  </select>

  <insert id="add" parameterType="cn.koala.system.RoleEntity">
    insert into t_role
    values (#{id}, #{code}, #{name}, #{description});
  </insert>

  <update id="update" parameterType="cn.koala.system.RoleEntity">
    update t_role
    set code        = #{code},
        name        = #{name},
        description = #{description}
    where id = #{id};
  </update>

  <update id="delete" parameterType="cn.koala.system.RoleEntity">
    delete
    from t_role
    where id = #{id}
  </update>
</mapper>
